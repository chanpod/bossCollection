script#bossStrategy(type="text/ng-template")
    div.jumbotron.wodHeader
    div.well.stratVideos
        div.container
            div.row()
                ins(class="adsbygoogle",
                     style="display:block",
                     data-ad-client="ca-pub-4895481554192451",
                     data-ad-slot="4790584276",
                     data-ad-format="auto")
        div.container.text-center
            h1
                | Boss Information
            div.row().text-center
                div.col-md-12
                    tabset(class="tab-animation")
                        tab(ng-click = "resetDisqus(HellfireThreadName)", heading = "Hellfire Citadel")
                            div(class="item animated bounceInRight").row
                                div(collapse="hfcBossSelected", ng-repeat = "boss in bossInfo.hellfire").col-md-3
                                    div(ng-click="changeHFCBossInfo(boss)").btn.btn-primary.bossButton
                                        h3
                                            {{boss.name}}
                            div(class="slide-animation").row
                                div.container
                                    div(ng-repeat = "boss in bossInfo.hellfire")
                                        div(collapse="!boss.isSelected").padding
                                            div.pull-right
                                                button(ng-click="cancelHFCBossSelection(boss)").btn.btn-danger
                                                    span.glyphicon.glyphicon-remove
                                            br
                                            h3
                                                {{boss.name}} {{difficultySelected}}
                                            button(ng-click = "heroicDifficultySelected(boss)").btn.btn-primary.btn-lg
                                                | Heroic
                                            button(ng-click = "mythicDifficultySelected(boss)").btn.btn-primary.btn-lg
                                                | Mythic
                                        div(collapse="!boss.heroic.isSelected")
                                            div(ng-repeat = "video in boss.heroic.videos")
                                                span(ng-click = "open(video.url)").list-group-item
                                                    {{video.name}}
                                            span(ng-click = "addVideo(boss.name, 'heroic', 'hellfire');addNewBoss = !addNewBoss").list-group-item.list-group-item-success.padding
                                                | Add Video
