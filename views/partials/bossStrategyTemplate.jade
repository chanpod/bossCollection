                                                div.container.text-center
                                                    div.form-horizontal.text-center
                                                        div.form-group
                                                            label.col-sm-2.control-label
                                                                | Video Name: &nbsp
                                                            div.col-sm-5
                                                                input(ng-model = "name").form-control

                                                        div.form-group
                                                            label.col-sm-2.control-label
                                                                | Youtube URL: &nbsp
                                                            div.col-sm-5
                                                                input(ng-model = "url").form-control
                                                        div.col-sm-7
                                                            button(ng-click = "saveNewBossInfo(name, url)").btn.btn-primary.form-control
