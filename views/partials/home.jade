script#home(type="text/ng-template")
    div(class = "jumbotron mainJumbo")
        div(class = "container")
            h1.
                {{welcomeMessage}}
            p.
                Enter your Realm and Guild name to see your raid progression!
    div(class = "well")
        div.container
            h2
             | Get Started
            div(class = "requiredInfo")
                form(role="form")
                    div(class = "form-group")
                        label(for="realmName") Realm
                        input(type = "input", class = "form-control", id ="iRealmName", ng-model = "realm", placeholder = "Enter Realm Name")
                    div(class = "form-group")
                        label(for="guildName") Guild
                        input(type = "input", class = "form-control", id ="iRealmName", ng-model = "guild", placeholder = "Enter Realm Name")
                    div(class = "form-group")
                        label(for="characterName") Character
                        input(type = "input", class = "form-control", id ="iRealmName", ng-model = "character", placeholder = "Enter Realm Name")
                    button(type = "button", class = "btn btn-primary", ng-click = "getCharacter()")
                       | Get Info
    div(class = "well")
        div().container
            div()
                h1.text-center
                    | Guild Name Here
            div.row
                div.col-md-3
                    h3
                        | Realm
                        br
                        small
                            | someRealm
                div.col-md-3
                    h3
                        | Members
                        br
                        small
                            | #ofMembers
    div(class = "well")
        div().container
            div()
                h1.text-center
                    | Expansion 1
            div.row
                div(class = "guildProgression").col-md-2
                    h2.text-center
                        | Raid 1
                    div(ang:round:progress data-round-progress-model = "data",
                    data-round-progress-outer-circle-background-color="#8B0000",
                    data-round-progress-outer-circle-foreground-color="#00BFFF",
                    data-round-progress-width="150",
                    data-round-progress-height="150",
                    data-round-progress-outer-circle-width="15",
                    data-round-progress-outer-circle-radius="60",
                    data-round-progress-inner-circle-radius="0")
                div(class = "guildProgression").col-md-2
                    h2.text-center
                        | Raid 2
                    div(ang:round:progress data-round-progress-model = "data",
                    data-round-progress-outer-circle-background-color="#8B0000",
                    data-round-progress-outer-circle-foreground-color="#00BFFF",
                    data-round-progress-width="150",
                    data-round-progress-height="150",
                    data-round-progress-outer-circle-width="15",
                    data-round-progress-outer-circle-radius="60",
                    data-round-progress-inner-circle-radius="0")
                div(class = "guildProgression").col-md-2
                    h2.text-center
                        | Raid 3
                    div(ang:round:progress data-round-progress-model = "data",
                    data-round-progress-outer-circle-background-color="#8B0000",
                    data-round-progress-outer-circle-foreground-color="#00BFFF",
                    data-round-progress-width="150",
                    data-round-progress-height="150",
                    data-round-progress-outer-circle-width="15",
                    data-round-progress-outer-circle-radius="60",
                    data-round-progress-inner-circle-radius="0")

