    div(class = "well").wotlkGradient
        div().container.text-center
            div.container
                div().row.center
                    div.col-md-4
                    div.col-md-4.wotlkBanner
            div.container.text-center
                div.row
                    div(ng-repeat = "raid in wotlkData", class = "guildProgression").col-md-3.col-sm-4
