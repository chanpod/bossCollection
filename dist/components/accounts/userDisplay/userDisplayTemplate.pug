script#userDisplayTemplate(type="text/ng-template")
    div(layout = "row", layout-align = "start center")
        div(layout, layout-align = "center center")
            img(ng-if = "avatarUrl != undefined", src = "{{avatarUrl}}").avatarImage
            img(ng-if = "avatarUrl == undefined", src="images/appLogo.png").avatarImage
        div(layout, layout-align = "center center")
            span(style = "font-size: {{fontsize}}px").userFont
                | {{user}} 