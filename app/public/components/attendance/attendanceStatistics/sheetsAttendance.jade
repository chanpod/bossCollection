script#sheetsStats(type="text/ng-template")
  
    
    md-content(id = "statsContainer")
        section
            div(flex, layout = "column", layout-align = "center center").welcomeBanner
                h2
                    | Sheet Data viewer
                p()
                    | View, manage, and manipulate data from google sheets in a table format
                span()
                    md-button(ng-click = "handleAuthClick()").md-raised.md-primary Authorize
                    md-button(ng-click = "handleSignoutClick()").md-raised.md-primary Remove Authorization
        md-progress-circular(ng-show = "!loading", md-mode="indeterminate")
        section(flex, ng-show = "!signedIn")
            span
                | Please authorize this app to access your google sheet.
        section(flex, ng-show = "signedIn") 
            md-toolbar()
                div(flex, layout, layout-align = "center center").md-toolbar-tools
                    h3
                        span
                            | Stats
            div(id = "stats", layout = "column")
                div(flex)
                    md-card
                        md-card-title
                            md-card-title-text
                                h3 Config
                                
                                md-divider
                        md-card-content
                            div(flex, layout = "row")
                                div(flex)
                                    md-input-container(flex-gt-xs = "30").md-block.md-icon-float
                                        label() Sheet ID
                                        input(type = "text", ng-model = "sheetId")
                                    
                                    md-input-container(flex-gt-xs = "30").md-block.md-icon-float
                                        label() Sheet Name
                                        input(type = "text", ng-model = "sheetName")
                                    
                                    md-input-container(flex-gt-xs = "30").md-block.md-icon-float
                                        label() Row Start Cell
                                        input(type = "text", ng-model = "startCell")
                                    
                                    md-input-container(flex-gt-xs = "30").md-block.md-icon-float
                                        label() End Column
                                        input(type = "text", ng-model = "endColumn")
                                div(flex)
                                    md-input-container(flex-gt-xs = "30").md-block.md-icon-float
                                        label() Sheet Name (optional)
                                        input(type = "text", ng-model = "headerSheetName")
                                    md-input-container(flex-gt-xs = "30").md-block.md-icon-float
                                        label() Header Row Start Cell
                                        input(type = "text", ng-model = "headerStartCell")
                                    md-input-container(flex-gt-xs = "30").md-block.md-icon-float
                                        label() Header End Column
                                        input(type = "text", ng-model = "headerEndColumn")
                        md-card-actions
                            md-button(ng-click = "getSheetTableData()").md-primary.md-raised
                                | Get Sheet Data
        section(flex, ng-show = "sheetData != undefined")  
            md-toolbar()
                div(flex, layout, layout-align = "center center").md-toolbar-tools
                    h3
                        span
                            | Data
            md-card
                md-card-title
                    md-card-title-text
                        h3 {{sheetName}} Data
                        
                        md-divider
                md-card-content                                    
                    
                    table()
                        tr()
                            th(ng-repeat = "header in sheetHeaders.values[0]")
                                {{header}}
                        tr(ng-repeat = "rowValues in sheetData.values")
                            td(ng-repeat = "data in rowValues")
                                {{data}}