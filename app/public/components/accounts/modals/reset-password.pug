script#resetPassword(type="text/ng-template")
    md-bottom-sheet().md-list.md-has-header
        div
            md-progress-linear(ng-show = "loading", md-mode="indeterminate")
            form(name = "passwordResetForm", ng-submit = "resetPassword()")
                div(layout = "row")
                    md-input-container(flex).md-block
                        label() Email
                        input(ng-model = "user.email", required)
                        div().hint case sensitive
                div(layout = "row")
                    md-input-container(flex).md-block
                        md-button(ng-click = "cancelPasswordReset()").md-primary.md-raised
                            | Cancel
                    md-input-container(flex).md-block
                        md-button(type = "submit").md-primary.md-raised
                            | Reset Password
                            
                            
    
    