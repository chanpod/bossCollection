md-card-header
    md-card-header-text
        span().md-headline
            {{application.character.name}} - {{application.dateApplied | date: format}}
        span().md-subhead
            {{application.character.class}} - {{application.itemLevel}}
        
md-card-content(layout = "column")
    img(src="images/classBackdrops/{{application.character.class}}.jpg", style = "width:100%;height:100%").md-media-xl.card-media.applicationReviewImageAdjust
    div(layout, layout-align = "space-around center")
        div(flex)
            div(layout = "column")
                h3
                    | Role 
                span {{application.desiredRole}}
        div(flex)
            div(layout = "column")
                h3
                    | Previous Guild
                span {{application.previousGuild}}
        div(flex)
            div(layout="column")
                h3
                    | Realm
                span {{application.realm.name}}
        div(flex)
            div(layout="column")
                h3
                    | Battle Tag
                span {{application.battleTag}}
        
            
    md-card-actions(layout = "row", layout-align = "end end")
        md-button(ng-click = "openComments(application.comments)").md-icon-button
            md-icon(md-font-library="material-icons") message
        md-button(ng-click = "buildArmoryUrl(application.realm.name, application.character.name)").md-icon-button
            md-icon(md-font-library="material-icons") call_made
        md-menu(ng-if = "user.rank > 2")
            md-button(ng-click = "openMenu($mdOpenMenu, $event)").md-icon-button
                md-icon(md-font-library="material-icons", md-menu-origin) more_vert
            md-menu-content
                md-menu-item
                    md-button(ng-click = "approveApplicant(application)")
                        md-icon(md-font-library="material-icons") check_circle
                        | Accept Application
                md-menu-item
                    md-button(ng-click = "rejectApplicant(application)")
                        md-icon(md-font-library="material-icons") close
                        | Reject application