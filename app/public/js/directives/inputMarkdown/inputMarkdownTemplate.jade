script#inputField(type="text/ng-template")  
    md-card
        md-card-content  
            textarea(style = "width:100%;height: 100%;min-height:75px;", type = "text", ng-model = "markdown", ng-change = "converToHtml()", placeholder = "Your message")
    
            
            md-toolbar
                div().md-toolbar-tools
                    h2
                        span Preview
                    span(flex)
                    md-button(ng-click = "goToExternal('http://showdownjs.github.io/demo/')", 
                            aria-label = "Help with formatting?").md-raised.md-accent
                        | Help with formatting?
                    md-button(aria-label = "hidePreview").md-fab.md-mini
                        md-icon(md-font-library="material-icons") trending_up
            md-content
                div(ng-bind-html = "html")
    
    md-divider
                            