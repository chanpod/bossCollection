script#inputField(type="text/ng-template")  
    md-card
        md-card-content  
            textarea(style = "width:100%;height: 100%;min-height:75px;", type = "text", ng-model = "markdown", ng-change = "converToHtml()", placeholder = "Your message")
    
            
            md-toolbar
                div().md-toolbar-tools
                    h2
                        span Preview
                    span(flex)
                    md-button(ng-click = "goToExternal('http://showdownjs.github.io/demo/')", 
                            aria-label = "Help with formatting?").md-icon-button
                        md-icon(md-font-library="material-icons") help
                    md-button(ng-click = "hideShowPreview()", aria-label = "hidePreview").md-icon-button
                        md-icon(ng-show = "!showPreview", md-font-library="material-icons") expand_less
                        md-icon(ng-show = "showPreview", md-font-library="material-icons") expand_more
            md-content(ng-show = "showPreview")
                div(ng-bind-html = "html")
    
    md-divider
                            